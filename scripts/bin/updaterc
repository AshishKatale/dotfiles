#!/usr/bin/env bash

DOTFILES=$(realpath $0 | sed 's/\(.*dotfiles\).*/\1/')

update_dotbashrc() {
	if grep -q "EDITOR=" ~/.bashrc; then
		sed -i "s/\(EDITOR=\).*/EDITOR=vim/" ~/.bashrc
	else
		echo "EDITOR=vim" >> ~/.bashrc
	fi

	if grep -q "export DOTFILES=" ~/.bashrc; then
		sed -i "s|\(export DOTFILES=\).*|export DOTFILES=$DOTFILES|" ~/.bashrc
	else
		echo "export DOTFILES=$DOTFILES" >> ~/.bashrc
	fi

	if grep -q ":$(realpath ~)/bin" ~/.bashrc; then
		echo -e "\033[00;32m\0$(realpath ~)/bin already in path\033[0m"
	else
		echo "export PATH=\"\$PATH:$(realpath ~)/bin\"" >> ~/.bashrc
		echo -e "\033[00;32m\0$(realpath ~)/bin added to path\033 .bashrc[0m"
	fi

	if grep -q ":$(realpath ~)/.local/bin" ~/.bashrc; then
		echo -e "\033[00;32m\0$(realpath ~)/.local/bin already in path\033[0m"
	else
		echo "export PATH=\"\$PATH:$(realpath ~)/.local/bin\"" >> ~/.bashrc
		echo -e "\033[00;32m\0$(realpath ~)/.local/bin added to path in .bashrc\033[0m"
	fi

	if grep -q "source.*bashrc.sh" ~/.bashrc; then
		sed -i "s|source.*bashrc.sh|source $DOTFILES/bash/bashrc.sh|" ~/.bashrc
	else
		echo "source $DOTFILES/bash/bashrc.sh" >> ~/.bashrc
	fi

	cp "$DOTFILES/editors/.vimrc" ~/.vimrc
}

update_dotprofile() {
	if grep -q "EDITOR=" ~/.profile; then
		sed -i "s/\(EDITOR=\).*/EDITOR=vim/" ~/.profile
	else
		echo "EDITOR=vim" >> ~/.profile
	fi

	if grep -q "export DOTFILES=" ~/.profile; then
		sed -i "s|\(export DOTFILES=\).*|export DOTFILES=$DOTFILES|" ~/.profile
	else
		echo "export DOTFILES=$DOTFILES" >> ~/.profile
	fi

	if grep -q "export TERM=" ~/.profile; then
		sed -i "s|\(export TERM=\).*|export TERM=xterm-256color|" ~/.profile
	else
		echo "export TERM=xterm-256color" >> ~/.profile
	fi

	if grep -q ":$(realpath ~)/bin" ~/.profile; then
		echo -e "\033[00;32m\0$(realpath ~)/bin already in path\033[0m"
	else
		echo "export PATH=\"\$PATH:$(realpath ~)/bin\"" >> ~/.profile
		echo -e "\033[00;32m\0$(realpath ~)/bin added to path in .profile\033[0m"
	fi

	if grep -q ":$(realpath ~)/.local/bin" ~/.profile; then
		echo -e "\033[00;32m\0$(realpath ~)/.local/bin already in path\033[0m"
	else
		echo "export PATH=\"\$PATH:$(realpath ~)/.local/bin\"" >> ~/.profile
		echo -e "\033[00;32m\0$(realpath ~)/.local/bin added to path in .profile\033[0m"
	fi
}

read -p "Update .bashrc? (y/N) : " CONFIRM
echo
if [[ $CONFIRM =~ ^[Yy]$ ]]
then
	update_dotbashrc
	echo -e "\033[00;32m\0.bashrc updated\033[0m"
else
	echo -e '\033[00;31m\0.bashrc update cancelled\033[0m'
fi

read -p "Update .profile? (y/N) : " CONFIRM
echo
if [[ $CONFIRM =~ ^[Yy]$ ]]
then
	update_dotprofile
	echo -e "\033[00;32m\0.profile updated\033[0m"
else
	echo -e '\033[00;31m\0.profile update cancelled\033[0m'
fi

